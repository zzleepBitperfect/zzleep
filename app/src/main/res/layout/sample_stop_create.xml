<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="10dp"
	android:background="@drawable/button_default"
	android:clickable="true"
	android:orientation="vertical"
	android:padding="10dp"
	android:weightSum="1">

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="45dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:src="@mipmap/icon_targets" />

	<TextView
		android:id="@+id/textView"
		style="@style/Title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="Paradero" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/iconStopCreateMenu"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/icon_college"
			android:visibility="visible"/>

		<EditText
			android:id="@+id/textParadero"
			style="@style/Base.V7.Widget.AppCompat.EditText"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:ellipsize="end"
			android:maxLines="1"
			 />
	</LinearLayout>

	<TextView
		style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="Radio de alerta" />

	<SeekBar
		android:id="@+id/seekBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:max="400" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0.1 km" />

		<TextView
			android:id="@+id/tvRadio"
			android:layout_width="242dp"
			android:layout_height="wrap_content"
			android:text="100 metros"
			android:textAlignment="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0.5 km" />
	</LinearLayout>


	<LinearLayout
		style="@style/Button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:layout_marginTop="15dp"
		android:orientation="horizontal"
		>

		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:text="Alarmas"
			android:textAppearance="@style/TextAppearance.FontIcon"
			android:id="@+id/btnAlarm2"/>

		<android.support.v7.widget.CardView
			android:id="@+id/btnAlarm"
			android:layout_width="40dp"
			android:layout_height="40dp"
			app:cardCornerRadius="8dp">

			<ImageView
				android:id="@+id/iconAlarm"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitCenter"
				android:src="@mipmap/alarma_gallo" />
		</android.support.v7.widget.CardView>
	</LinearLayout>

	<LinearLayout
		style="@style/Button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:text="Audio en Ruta"
			android:textAppearance="@style/TextAppearance.FontIcon" />

		<android.support.v7.widget.CardView
			android:id="@+id/btnSound"
			android:layout_width="40dp"
			android:layout_height="40dp"
			app:cardCornerRadius="8dp">

			<ImageView
				android:id="@+id/iconSoundAgregar"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitCenter"
				android:src="@mipmap/btn_audio" />
		</android.support.v7.widget.CardView>
	</LinearLayout>
	<!-- Paradas -->

	<Button
		android:id="@+id/btnSaveStop"
		style="@style/ButtonMenu"
		android:layout_width="wrap_content"
		android:layout_height="90dp"
		android:layout_gravity="center"

		android:background="@mipmap/icon_save"
		android:paddingTop="10dp" />

</LinearLayout>

