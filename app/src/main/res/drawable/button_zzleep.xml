<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
			<solid android:color="@color/colorAccent"/>
			<corners android:bottomLeftRadius="@dimen/border_radius" android:topLeftRadius="@dimen/border_radius"/>
		</shape>

	</item>

	<item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
			<solid android:color="@color/colorPrimary"/>
			<corners android:bottomLeftRadius="@dimen/border_inner_radius" android:topLeftRadius="@dimen/border_inner_radius"/>
		</shape>
	</item>

</selector>