<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="false">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
			<solid android:color="@color/colorButtonDisabled" />
			<stroke android:width="@dimen/border_width" android:color="@color/colorWhite" />
			<corners android:radius="@dimen/border_radius" />
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
			<solid android:color="@color/colorWhite" />
			<stroke android:width="@dimen/border_width" android:color="@color/colorPrimaryDark" />
			<corners android:radius="@dimen/border_radius" />
		</shape>
	</item>

	<item>
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
			<solid android:color="@color/colorWhite" />
			<stroke android:width="@dimen/border_width" android:color="@color/colorPrimaryDark" />
			<corners android:radius="@dimen/border_radius" />
		</shape>
	</item>

</selector>